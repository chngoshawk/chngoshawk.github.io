<% include ../header %>
	<div class="container">
		<ol class="breadcrumb">
			<li>
				<a href="#">后台管理系统</a>
			</li>
			<li>
				<a href="#">后台列表</a>
			</li>
		</ol>
	</div>
	<div class="container">
		<table class="table">
			<tr class="user-table">
				<th>排序</th>
				<th>名称</th>
				<th>介绍</th>
				<th>操作</th>
			</tr>
			<% dataList.forEach(function(val){ %>
			<tr>
				<td>
					<%= val.order %>
				</td>
				<td>
					<%= val.listname %>
				</td>
				<td>
					<%= val.intro %>
				</td>
				<td>
					<a href="/admin/modify/<%= val._id %>">编辑</a>
					|
					<a href="/admin/del/<%= val._id %>" onclick="return confirm('你确定要删除吗?')">删除</a>
				</td>
			</tr>
			<% }) %>
		</table>
		<p><%= tips %></p>
		<nav aria-label="Page navigation">
			<ul class="pagination">
				<li>
					<a href="/admin/list/?page=1">首页</a>
				</li>
				<li>
					<a href="/admin/list/?page=<%= page -1 %>" aria-label="Previous">
						<span aria-hidden="true">&laquo;</span>
					</a>
				</li>
				<% for(var i = 1;i <= pages;i++){ %>
				<li>
					<a href="/admin/list/?page=<%= i %>">
						<%= i %>
					</a>
				</li>
				<% } %>
				<li>
					<a href="/admin/list/?page=<%= -(-page-1) %>" aria-label="Next">
						<span aria-hidden="true">&raquo;</span>
					</a>
				</li>
				<li>
					<a href="/admin/list/?page=<%= pages %>">尾页</a>
				</li>
			</ul>
		</nav>
	</div>
	<% include ../footer %>